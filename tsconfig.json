{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "ts-node": {
    "esm": true
  }
}